<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pocketRemovalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pocket Removal Detection" />

    <Button
        android:id="@+id/chargerRemovalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charger Removal Detection" />

    <Button
        android:id="@+id/motionDetectionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion Detection" />

</LinearLayout>
